{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "strict": true,
    "jsx": "preserve",
    "importHelpers": true,
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "sourceMap": true,
    "baseUrl": ".",
    "types": [
      "jest",
      "node",
      "react",
      "webpack-env"
    ],
    "paths": {
      "@/*": [
        "packages/*"
      ]
    },
    "lib": [
      "esnext",
      "dom",
      "dom.iterable",
      "scripthost"
    ]
  },
  "include": [
    "config/**/*.ts",
    "stories/**/*.ts",
    "stories/**/*.tss",
    "stories/**/*.vue",
    "tests/**/*.ts",
    "tests/**/*.tsx",
    "packages/**/src/**/*.ts",
    "packages/**/src/**/*.tsx",
    "packages/**/src/**/*.vue",
    "packages/**/tests/**/*.ts",
    "packages/**/tests/**/*.tsx"
  ],
  "exclude": [
    "node_modules",
    "packages/**/node_modules",
    "dist",
    "packages/**/dist",
    "storybook-static"
  ],
  "files": [
    "shims/vue.d.ts",
    "shims/other.d.ts"
  ]
}
